<!-- Start Category-->
<div class="categorys">
    <div class="container">
        <div class="headSection d-flex justify-content-center align-items-center flex-column pt-5 pb-5">
            <h4 class="fw-bold headP">Categories</h4>
        </div>
        <div class="row categorysDiv pb-3">
            @{
                int count = 0;
                foreach (var Category in Model.categories)
                    {
                    if (count < 12)
                        {
                        var img = "/CategoryImage/" + Category.CategoryImg;
                        <a asp-action="Store" asp-controller="Home" asp-route-id="@Category.Name" class="categoryInfo col-lg-2 col-md-3 col-sm-6 d-flex justify-content-center align-items-center flex-column">
                            <div class="CategoryImage">
                                <img src="@img" alt="Alternate Text" style="width:50px;height:50px" />
                            </div>
                            <h5 class="CategoryName text-muted pt-2">@Category.Name.ToString().Replace("_", " ")</h5>
                        </a>
                        count++;
                        }
                    }
            }
        </div>
        <div class="d-flex CategoriesBtn align-items-center gap-4 mb-5">
            <a class="btn BtnCustom3 Btn">More Categories <i class="fa-solid fa-caret-right"></i></a>
        </div>
    </div>
</div>

